<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>store</display-name>
  <servlet>
    <servlet-name>BaseServlet</servlet-name>
    <servlet-class>com.nyist.web.servlet.BaseServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UserServlet</servlet-name>
    <servlet-class>com.nyist.web.servlet.UserServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>IndexServlet</servlet-name>
    <servlet-class>com.nyist.web.servlet.IndexServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CategoryServlet</servlet-name>
    <servlet-class>com.nyist.web.servlet.CategoryServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ProductsServlet</servlet-name>
    <servlet-class>com.nyist.web.servlet.ProductsServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CartServlet</servlet-name>
    <servlet-class>com.nyist.web.servlet.CartServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AdminProduct</servlet-name>
    <servlet-class>com.nyist.web.servlet.AdminProduct</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AdminOrder</servlet-name>
    <servlet-class>com.nyist.web.servlet.AdminOrder</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>UserAdmin</servlet-name>
    <servlet-class>com.nyist.web.servlet.UserAdmin</servlet-class>
  </servlet>



  <servlet-mapping>
    <servlet-name>BaseServlet</servlet-name>
    <url-pattern>/base</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UserServlet</servlet-name>
    <url-pattern>/user</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>IndexServlet</servlet-name>
    <url-pattern>/index</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CategoryServlet</servlet-name>
    <url-pattern>/category</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ProductsServlet</servlet-name>
    <url-pattern>/products</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CartServlet</servlet-name>
    <url-pattern>/cart</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AdminProduct</servlet-name>
    <url-pattern>/adminProduct</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AdminOrder</servlet-name>
    <url-pattern>/adminOrder</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>UserAdmin</servlet-name>
    <url-pattern>/userAdmin</url-pattern>
  </servlet-mapping>
  <error-page>
    <error-code>500</error-code>
    <location>/500.jsp</location>
  </error-page>
  <error-page>
    <error-code>404</error-code>
    <location>/404.jsp</location>
  </error-page>
</web-app>