<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.4" 
	xmlns="http://java.sun.com/xml/ns/j2ee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee 
	http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>ViewTreeServlet</servlet-name>
    <servlet-class>cn.itcast.web.servlet.ViewTreeServlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>ViewCategoryServlet</servlet-name>
    <servlet-class>cn.itcast.web.servlet.ViewCategoryServlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>AddCategoryServlet</servlet-name>
    <servlet-class>cn.itcast.web.servlet.AddCategoryServlet</servlet-class>
  </servlet>



  <servlet-mapping>
    <servlet-name>ViewTreeServlet</servlet-name>
    <url-pattern>/servlet/ViewTreeServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ViewCategoryServlet</servlet-name>
    <url-pattern>/servlet/ViewCategoryServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AddCategoryServlet</servlet-name>
    <url-pattern>/servlet/AddCategoryServlet</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
